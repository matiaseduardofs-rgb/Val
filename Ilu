  position: relative;
  z-index: 2;
  top: 28vh;
  max-width: 600px;
  margin: auto;
  padding: 20px;
}

.poem {
  font-size: 22px;
  font-weight: 300;
  line-height: 1.6;
  opacity: 0;
  animation: fadeIn 4s forwards;
}

.counter {
  margin-top: 40px;
  font-size: 16px;
  letter-spacing: 1px;
  opacity: 0.8;
}

@keyframes fadeIn {
  to { opacity: 1; }
}
